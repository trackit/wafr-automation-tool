{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "includedScripts": [],
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": ["scope:backend", "type:app"],
  "targets": {
    "prettier": {
      "command": "prettier src --check",
      "options": {
        "cwd": "apps/backend"
      }
    },
    "build": {
      "command": "sam build --cached && cp -R libs/backend/useCases/src/lib/prepareCustodian/policies .aws-sam/build/StateMachine/PrepareCustodianFunction/ && esbuild libs/backend/infrastructure/src/lib/config/typeorm/migrations/*.ts --outdir=.aws-sam/build/Api/MigrationRunnerFunction/migrations --platform=node --format=cjs --sourcemap --target=es2020 && esbuild libs/backend/infrastructure/src/lib/config/typeorm/tenantsMigrations/*.ts --outdir=.aws-sam/build/Api/MigrationRunnerFunction/tenantsMigrations --platform=node --format=cjs --sourcemap --target=es2020",
      "options": {
        "cwd": "."
      }
    },
    "validate": {
      "command": "sam validate",
      "options": {
        "cwd": "."
      },
      "dependsOn": ["build"]
    },
    "typecheck": {
      "command": "tsc --noEmit -p tsconfig.app.json",
      "options": {
        "cwd": "apps/backend"
      }
    },
    "deploy": {
      "command": "sh scripts/backend/deploy.sh",
      "options": {
        "cwd": "."
      },
      "dependsOn": ["build"]
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
