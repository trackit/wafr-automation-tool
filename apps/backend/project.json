{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "includedScripts": [],
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": ["scope:backend", "type:app"],
  "targets": {
    "prettier": {
      "command": "prettier src --check",
      "options": {
        "cwd": "apps/backend"
      }
    },
    "build": {
      "command": "sh scripts/backend/build.sh",
      "options": {
        "cwd": "."
      }
    },
    "validate": {
      "command": "sam validate",
      "options": {
        "cwd": "."
      },
      "dependsOn": ["build"]
    },
    "typecheck": {
      "command": "tsc --noEmit -p tsconfig.app.json",
      "options": {
        "cwd": "apps/backend"
      }
    },
    "deploy": {
      "command": "sh scripts/backend/deploy.sh",
      "options": {
        "cwd": "."
      },
      "dependsOn": ["build"]
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
